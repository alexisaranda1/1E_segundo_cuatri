#include <stdio.h>
#include <stdlib.h>

int temperaturaValidacion (){

	char temperatura;
	do {
	printf ("Ingrese la  temperatura(f para fahrenheit) y (c para celsius):");
	scanf ("%c",&temperatura);

	} while (temperatura == 'f' || temperatura =='c');

	return 0 ;
}

