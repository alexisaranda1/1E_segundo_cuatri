#include <stdio.h>
#include <stdlib.h>
int perdirNumero (void);

int main(void) {
	setbuf(stdout, NULL);
int respuesta;

 respuesta = pedirNumero();

	return 0;
}

int perdirNumero (void){

	int numeroIngresado;

		printf ("Ingrese un numero:");
		scanf("%d",&numeroIngresado);

	return numeroIngresado;
}
