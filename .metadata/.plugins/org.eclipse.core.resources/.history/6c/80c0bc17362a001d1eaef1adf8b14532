/*
 ============================================================================
 Ejercicio 3-1:
 Crear una función que muestre por pantalla el número flotante
  que recibe como parámetro.

 ============================================================================
 */

#include <stdio.h>
#include <stdlib.h>

int pedirEntero(void);

int main(void) {
	setbuf(stdout, NULL);
	int numeroIngresado;
	numeroIngresado = pedirEntero();
	printf("Numero ingresado: %d", numeroIngresado);
	return EXIT_SUCCESS;
}

int pedirEntero(void) {
	int numeroIngresado;
	printf("Ingrese un numero: ");
	scanf("%d", &numeroIngresado);
	fflush(stdin);
	return numeroIngresado;
}
