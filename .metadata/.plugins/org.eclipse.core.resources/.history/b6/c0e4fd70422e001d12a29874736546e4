/*
 *
Realizar un programa EN EL MAIN que permita calcular y mostrar
 el factorial de un número. Utilizar la función PedirNumero
  de la ejercitación 3-4.

 */

#include <stdio.h>
#include <stdlib.h>
int perdirNumero(void);

int main(void) {
	setbuf(stdout, NULL);
 int respuesta;

 respuesta = perdirNumero();

 printf("El numero Ingresado es: %d \n", respuesta);

	return 0;
} // fin del main.

int perdirNumero (void){

	int numeroIngresado;
	int retorno;

		printf ("Ingrese un numero:\n");
		scanf("%d",&numeroIngresado);

		retorno = numeroIngresado;

	return retorno;
}// fin de pedirNumero
