//bibliotecas.
#include <stdio.h>
#include <stdlib.h>

// int main funcion principal.
//nombre parametros y debolucion.

int main(void) {
	setbuf(stdout,NULL);

	//variables.
    int numeroUno;
    int numeroDos;
    int suma;

    //pedir un numro por consola por scanf.
    printf("numeroUno: ");
    scanf("%d", &numeroUno); // "%d" de digito.
    printf("numeroDos: ");
    scanf("%d", &numeroDos);

    suma = numeroUno + numeroDos;

    printf(" La suma es: %d ", suma);

    return 0;
}

