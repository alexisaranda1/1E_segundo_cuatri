#include <stdio.h>
#include <stdlib.h>

char temperaturaValidacion (){


	char grados;
	do {
	printf ("Ingrese la  temperatura(f para fahrenheit) O (c para celsius):");
	scanf ("%c",&grados);

	} while (!(grados == 'f' || grados =='c'));
	return grados ;


} // fIN DE TEMERATURA.

int  calculos ( ){

	int temperaturaF;
	int temperaturaC;
	int grados;


	switch (grados) {
		case 'f':
		do {
			printf ("Ingrese la  temperatura: ");
			scanf ("%c",&temperaturaF);
		} while (!(temperaturaF == 32 || temperaturaF == 212 ));
			  break;
		case 'c':

			do {
				printf ("Ingrese la  temperatura: ");
				scanf ("%c",&temperaturaC);

			} while (!(temperaturaC == 0 || temperaturaC = 100));

			  break;

			  return 0 ;

} // fIN DE TEMERATURA.


